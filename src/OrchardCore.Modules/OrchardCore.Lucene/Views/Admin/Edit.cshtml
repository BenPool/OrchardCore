@model LuceneIndexSettingsViewModel

<h1>@RenderTitleSegments(T["Edit Index"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Edit" method="post">

    <div class="form-group" asp-validation-class-for="IndexName">
        <label asp-for="IndexName">@T["Index Name"]</label>
        <input asp-for="IndexName" class="form-control" readonly />
        <span asp-validation-for="IndexName" class="text-danger"></span>
    </div>

    <div class="form-group" asp-validation-class-for="AnalyzerName">
        <label asp-for="AnalyzerName">@T["Analyzer Name"]</label>
        <select asp-for="AnalyzerName" asp-items="Model.Analyzers" class="form-control"></select>
        <span asp-validation-for="AnalyzerName" class="text-danger"></span>
    </div>

    <div class="form-group" asp-validation-class-for="Culture">
        <label asp-for="Culture">@T["Culture"]</label>
        <select asp-for="Culture" asp-items="Model.Cultures" class="form-control"></select>
        <span class="hint">@T["The content culture that this index should index."]</span>
        <span asp-validation-for="Culture" class="text-danger"></span>
    </div>

    <fieldset class="form-group">
        <label asp-for="IndexedContentTypes">@T["Content Types"]</label>
        <span class="hint">— @T["The content types to index. Choose at least one."]</span>
        @await Component.InvokeAsync("SelectContentTypes", new { selectedContentTypes = Model.IndexedContentTypes, htmlName = Html.NameFor(m => m.IndexedContentTypes) })
    </fieldset>

    <div class="form-group" asp-validation-class-for="IndexLatest">
        <label asp-for="IndexLatest">@T["Index options"]</label>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" asp-for="IndexLatest" class="custom-control-input">
            <label class="custom-control-label" asp-for="IndexLatest">@T["Index latest version"]</label>
            <span class="hint">— @T["Check to index draft if it exists, otherwise only the published version is indexed."]</span>
        </div>
        <span asp-validation-for="IndexLatest" class="text-danger"></span>
    </div>

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
            <a class="btn btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>
